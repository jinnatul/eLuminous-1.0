@using System.Globalization
@model List<Student>

@{
    Layout = "_LayoutStudentClassroom";
}

@{
    var textInfo = new CultureInfo("en-US", false).TextInfo;
}
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col s12 l12">
            <div class="card horizontal hoverable">
              <div class="card-image">
                <img src="~/app/lib/images/private/undraw_having_fun_iais.png" alt="">
              </div>
                <div class="card-stacked">
                    <div class="card-title">
                        <h4>Your friends in the labroom</h4>
                    </div>
                    <div class="card-content">
                        <ul class="collection">
                            @foreach (var eachStudent in Model)
                            {
                                <li class="collection-item avatar">
                                    <i class="material-icons circle grey darken-3">accessibility_new</i>
                                    <span class="title">@textInfo.ToTitleCase(eachStudent.Account.UserName)</span>
                                    <p>@eachStudent.Institution.InstitutionName<br>
                                        @eachStudent.Institution.InstitutionLocation
                                    </p>
                                    <p><b>HSC Batch :</b> @eachStudent.HscBatch (@eachStudent.Shift)</p>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="card-action">
                        <a class="blue-text text-darken-3"><b>Invent something together</b></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $( document ).ready(function() {
      $("#tabStudentFriends").attr('class', 'active');
    });
</script>